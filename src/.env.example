# CLIP Model Configuration
# Available models: ViT-B-32, ViT-B-16, ViT-L-14
CLIP_MODEL=ViT-B-32

# Model pretrained weights
CLIP_PRETRAINED=openai

# Computation device: cpu, cuda
# Use 'cuda' if GPU is available for 10-20x speedup
CLIP_DEVICE=cpu

# ============================================================================
# Service Configuration
# ============================================================================

# Directory containing pre-computed embeddings
EMBEDDINGS_DIR=./data/embeddings

# Default number of search results
SEARCH_TOP_K=5

# ============================================================================
# API Server Configuration
# ============================================================================

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Number of worker processes
API_WORKERS=4

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, leave empty for stdout only)
LOG_FILE=./logs/search.log

# ============================================================================
# Security Configuration
# ============================================================================

# Enable API authentication (requires API key in headers)
ENABLE_AUTH=false

# Enable rate limiting (requests per minute per IP)
ENABLE_RATE_LIMITING=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ============================================================================
# Performance Configuration
# ============================================================================

# Cache search results (requires Redis)
ENABLE_CACHE=false
REDIS_URL=redis://localhost:6379

# ============================================================================
# Monitoring Configuration
# ============================================================================

# Enable Sentry error tracking
ENABLE_SENTRY=false
SENTRY_DSN=

# Enable Prometheus metrics
ENABLE_METRICS=false
METRICS_PORT=9090
