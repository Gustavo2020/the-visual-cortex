# ============================================================================
# The Visual Cortex - Environment Configuration Template
# ============================================================================
# Copy this file to .env.clip and customize for your deployment.
# For local development: source .env.clip
# For production: Docker will load these automatically

# ============================================================================
# CLIP Model Configuration
# ============================================================================
# Model choices: ViT-B-32, ViT-B-16, ViT-L-14, ViT-SO400M-14-SigLIP-384, etc.
CLIP_MODEL="ViT-B-32"

# Pretrained weights source: openai, webli, etc.
CLIP_PRETRAINED="openai"

# Optional: specific tokenizer (usually matches CLIP_MODEL)
# CLIP_TOKENIZER="ViT-B-32"

# Device: cpu, cuda (NVIDIA GPU), mps (Apple Silicon)
CLIP_DEVICE="cpu"

# Data type: auto, float32, float16
CLIP_DTYPE="auto"

# ============================================================================
# Embeddings Configuration
# ============================================================================
# Directory where pre-computed embeddings are stored
EMBEDDINGS_DIR="./data/embeddings"

# Whether to normalize embeddings (recommended)
NORMALIZE_EMBEDDINGS="1"

# Default number of results per search
SEARCH_TOP_K="10"

# ============================================================================
# API Configuration
# ============================================================================
# API host and port (for development)
API_HOST="0.0.0.0"
API_PORT="8000"

# API base URL (used by frontend/client)
# For local dev: http://localhost:8000
# For production: https://yourdomain.com
API_BASE_URL="http://localhost:8000"

# ============================================================================
# Streamlit UI Configuration
# ============================================================================
# Streamlit server address (for development)
STREAMLIT_SERVER_PORT="8501"

# UI API connection (frontend to backend)
UI_API_HOST="localhost"
UI_API_PORT="8000"

# For production, update to:
# UI_API_HOST="yourdomain.com"
# UI_API_PORT="443"  (HTTPS)

# ============================================================================
# Production / Deployment Configuration
# ============================================================================
# Domain name (replace with your actual domain when ready)
DOMAIN="yourdomain.com"

# SSL certificate paths (for HTTPS)
# SSL_CERT_PATH="/etc/letsencrypt/live/yourdomain.com/fullchain.pem"
# SSL_KEY_PATH="/etc/letsencrypt/live/yourdomain.com/privkey.pem"

# ============================================================================
# Optional: Logging and Monitoring
# ============================================================================
LOG_LEVEL="INFO"
# LOG_LEVEL="DEBUG"  # For troubleshooting

# ============================================================================
# Optional: Re-ranking (currently disabled, kept for future use)
# ============================================================================
# ENABLE_RERANKING="0"
# RERANK_NUM_CROPS="5"
# RERANK_PREFETCH_MULTIPLIER="3"
